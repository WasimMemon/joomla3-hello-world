<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="title"
			type="text"
			label="COM_HELLOWORLD_HELLOWORLD_GREETING_LABEL"
			description="COM_HELLOWORLD_HELLOWORLD_GREETING_DESC"
			size="40"
			required="true"
			class="inputbox"
			default=""
		/>
		<field
			name="parent_id"
			type="Categorylist"
			label="COM_HELLOWORLD_HELLOWORLD_PARENT_NAME"
			description="COM_HELLOWORLD_HELLOWORLD_PARENT_DESC"
			class="inputbox"
			default=""
		/>
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1"
		/>
	   <field
	   		name="published"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			description="COM_HELLOWORLD_PUBLISHED_STATUS_LABEL_DESC"
			label="COM_HELLOWORLD_PUBLISHED_STATUS_LABEL">
                <option value="1">Publish</option>
                <option value="0">Unpublish</option>
        </field>
		<field
			name="image"
			type="Uploadimage"
			label="COM_HELLOWORLD_FIELD_PARAMS_IMAGE_LABEL"
			description="COM_HELLOWORLD_FIELD_PARAMS_IMAGE_DESC"
		/>
	</fieldset>
</form>